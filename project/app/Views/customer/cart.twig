<script>
document.addEventListener('DOMContentLoaded', function() {
  // Update cart button
  const updateCartBtn = document.getElementById('update-cart');
  if (updateCartBtn) {
    updateCartBtn.addEventListener('click', function() {
      // Collect all quantities
      const quantities = document.querySelectorAll('input[type="number"]');
      const cartUpdates = [];
      
      quantities.forEach((input, index) => {
        cartUpdates.push({
          itemId: index + 1, // This would be a real item ID in production
          quantity: parseInt(input.value)
        });
      });
      
      // Here would be the call to update the cart in the database
      console.log('Updating cart with:', cartUpdates);
      
      // Show success notification
      showNotification('Cart updated successfully', 'success');
    });
  }
  
  // Function to show notification
  function showNotification(message, type = 'success') {
    const notificationClass = type === 'success' ? 'bg-green-500' : 'bg-red-500';
    const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';
    
    const notification = document.createElement('div');
    notification.classList.add('fixed', 'bottom-4', 'right-4', notificationClass, 'text-white', 'p-4', 'rounded-md', 'shadow-lg', 'z-50');
    notification.innerHTML = `
      <div class="flex items-center">
        <i class="fas ${icon} mr-2"></i>
        <span>${message}</span>
      </div>
    `;
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
      notification.classList.add('opacity-0', 'transition', 'duration-300');
      setTimeout(() => {
        document.body.removeChild(notification);
      }, 300);
    }, 3000);
  }
  
  // Quantity buttons
  const decreaseButtons = document.querySelectorAll('.fa-minus');
  const increaseButtons = document.querySelectorAll('.fa-plus');
  
  decreaseButtons.forEach(button => {
    button.parentElement.addEventListener('click', function() {
      const input = this.parentElement.querySelector('input');
      const currentValue = parseInt(input.value);
      if (currentValue > 1) {
        input.value = currentValue - 1;
      }
    });
  });
  
  increaseButtons.forEach(button => {
    button.parentElement.addEventListener('click', function() {
      const input = this.parentElement.querySelector('input');
      const currentValue = parseInt(input.value);
      input.value = currentValue + 1;
    });
  });
});
</script>

