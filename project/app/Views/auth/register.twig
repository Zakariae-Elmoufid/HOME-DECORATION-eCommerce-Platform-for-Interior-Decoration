{% extends "layouts/main.twig" %}

{% block title %}Register{% endblock %}

{% block content %}



    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="flex flex-col md:flex-row">
            <!-- Image Left Side -->
            <div class="register-image w-full md:w-1/2 h-64 md:h-auto animate-slide-in-left">
              <div class="h-full w-full flex items-center justify-center bg-black bg-opacity-30 p-10">
                <div class="text-center text-white">
                  <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4">Join Our Community</h2>
                  <p class="text-lg mb-6">Create an account to enjoy exclusive benefits and personalized shopping experience.</p>
                  <div class="w-24 h-1 bg-gold mx-auto"></div>
                </div>
              </div>
            </div>
            
            <!-- Form Right Side -->
            <div class="w-full md:w-1/2 p-8 md:p-12 animate-slide-in-right">
              <h3 class="text-2xl font-serif font-bold text-charcoal mb-6">Create Your Account</h3>
              
              <form action="store_user" method="post">
                  <div  class="mb-6">
                    <label for="username" class="block text-charcoal text-sm font-medium mb-2">Full Name</label>
                    <input type="text" id="username" name="username"  
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg form-input-focus transition duration-300"
                           placeholder="John Doe" value="{{ old.username ?? '' }}">
                  {% if errors.username %}
                    <small class="text-red-700 pl-2">{{ errors.username[0] }}</small>
                  {% endif %} 
                  </div>
                
                <div class="mb-6">
                  <label for="email" class="block text-charcoal text-sm font-medium mb-2">Email Address</label>
                  <input type="email" id="email" name="email"  
                         class="w-full px-4 py-3 border border-gray-300 rounded-lg form-input-focus transition duration-300"
                         placeholder="your@email.com" 
                          value="{{ old.email ?? '' }}">
                     {% if errors.email %}
                      <small class="text-red-700 pl-2">{{ errors.email[0] }}</small>
                     {% endif %} 
                </div>
                
                <div class="mb-6">
                  <label for="password" class="block text-charcoal text-sm font-medium mb-2">Password</label>
                  <input type="password" id="password" name="password"  
                         class="w-full px-4 py-3 border border-gray-300 rounded-lg form-input-focus transition duration-300"
                         placeholder="••••••••">
                    {% if errors.password %}
                      <small class="text-red-700 pl-2">{{ errors.password[0] }}</small>
                     {% endif %} 
                </div>
                
                <div class="mb-6">
                  <label for="confirm_password" class="block text-charcoal text-sm font-medium mb-2">Confirm Password</label>
                  <input type="password" id="confirm_password" name="confirm_password"  
                         class="w-full px-4 py-3 border border-gray-300 rounded-lg form-input-focus transition duration-300"
                         placeholder="••••••••">
                     
                </div>
                
                <div class="mb-6">
                  <label class="flex items-center">
                    <input type="checkbox" class="h-4 w-4 text-gold focus:ring-gold border-gray-300 rounded transition duration-300" required>
                    <span class="ml-2 text-sm text-charcoal">I agree to the <a href="#" class="text-gold hover:underline">Terms of Service</a> and <a href="#" class="text-gold hover:underline">Privacy Policy</a></span>
                  </label>
                </div>
                
                <div class="mb-6">
                  <label class="flex items-center">
                    <input type="checkbox" class="h-4 w-4 text-gold focus:ring-gold border-gray-300 rounded transition duration-300">
                    <span class="ml-2 text-sm text-charcoal">Subscribe to our newsletter for exclusive offers and updates</span>
                  </label>
                </div>
                
                <button type="submit" 
                        class="w-full bg-gold hover:bg-gold-dark text-white font-medium py-3 px-4 rounded-lg transition-all duration-300 transform hover:scale-105">
                  Create Account
                </button>
              </form>

              <div class="mt-8 text-center">
                <p class="text-charcoal text-sm">Or sign up with</p>
                <div class="flex justify-center space-x-4 mt-4">
                  <a href="#" class="bg-blue-600 text-white rounded-full p-2 h-10 w-10 flex items-center justify-center hover:bg-blue-700 transition-all duration-300 transform hover:scale-110">
                    <i class="fab fa-facebook-f"></i>
                  </a>
                  <a href="#" class="bg-red-600 text-white rounded-full p-2 h-10 w-10 flex items-center justify-center hover:bg-red-700 transition-all duration-300 transform hover:scale-110">
                    <i class="fab fa-google"></i>
                  </a>
                  <a href="#" class="bg-black text-white rounded-full p-2 h-10 w-10 flex items-center justify-center hover:bg-gray-800 transition-all duration-300 transform hover:scale-110">
                    <i class="fab fa-apple"></i>
                  </a>
                </div>
              </div>

              <div class="mt-6 text-center">
                <p class="text-charcoal text-sm">
                  Already have an account? 
                  <a href="login" class="text-gold font-medium hover:underline transition duration-300">Sign in</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>





{% endblock %}

   