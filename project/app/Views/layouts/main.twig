              <i class="fas fa-shopping-bag text-xl"></i>
              <span id="count-cart-item" class="absolute -top-2 -right-2 bg-gold text-white text-xs rounded-full h-5 w-5 flex items-center justify-center"></span>
            </a>
            <a href="{{ session.id ? '/customer/account' : '/login' }}" class="text-charcoal hover:text-gold transition duration-300"><i class="far fa-user text-xl"></i></a>
            <button id="bars" class="md:hidden text-charcoal hover:text-gold transition duration-300"><i class="fas fa-bars text-xl"></i></button>
          </div>
        </div>

          {% block SearchDesktop %}
          {% endblock %}
