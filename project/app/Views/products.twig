{% extends "layouts/main.twig" %}
{% block title %}Products{% endblock %}
{% block content %}

<section class="py-16 bg-cream">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">

    
    <!-- Filters -->
    <div class="bg-white rounded-lg shadow-sm p-5 mb-6">
      <div class="flex flex-col md:flex-row justify-between space-y-4 md:space-y-0">
        <div class="flex flex-col md:flex-row md:space-x-4 space-y-4 md:space-y-0">
          <div>
            <label for="category-filter" class="block text-sm font-medium text-gray-700 mb-1">Category</label>
            <select id="category-filter" class="w-full md:w-48 border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-blue focus:border-blue">
              <option value="All Categories">All Categories</option>
              {% for category in products.categories %}
                <option value="{{ category.title }}">{{ category.title }}</option>
              {% endfor %}
            </select>
          </div>
          
        </div>
        <div>
          <label for="sort-by" class="block text-sm font-medium text-gray-700 mb-1">Sort By</label>
          <select id="sort-by" class="w-full md:w-48 border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-blue focus:border-blue">
            <option value="newest">Newest</option>
            <option value="name-asc">Name (A-Z)</option>
            <option value="name-desc">Name (Z-A)</option>
            <option value="price-asc">Price (Low to High)</option>
            <option value="price-desc">Price (High to Low)</option>
          </select>
        </div>
      </div>
    </div>


    <div id="product-container" class=" grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      {% for product in products.products %}
        <!-- Product Card -->
        <div class="product-card bg-white rounded-lg overflow-hidden shadow-md transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">
          <div class="relative group">
            {% set primary_image = null %}
            {% for image in product.images %}
              {% if image.is_primary == 1 %}
                {% set primary_image = image %}
              {% endif %}
            {% endfor %}
            
            <img 
              src="/public/uploads/{{ primary_image.image_path }}" 
              class="w-full h-64 object-cover transition-transform duration-700 group-hover:scale-105"
              alt="{{ product.title }}">
            
            <!-- Quick View Button - Appears on hover -->
            <div class="absolute top-2 right-2">
              <a href="/product/{{ product.id }}"
                class="bg-white bg-opacity-90 text-gold hover:bg-gold hover:text-white p-3 rounded-full transform transition-transform duration-300 hover:scale-110">
                <i class="fas fa-eye"></i>
              </a>
            </div>
            
            <!-- Product Badge -->
            {% if product.stock <= 5 and product.stock > 0 %}
              <div class="absolute top-2 left-2">
                <span class="bg-orange-500 text-white text-xs font-bold px-3 py-1 rounded-full">Limited Stock</span>
              </div>
            {% elseif product.stock == 0 %}
              <div class="absolute top-2 left-2">
                <span class="bg-red-500 text-white text-xs font-bold px-3 py-1 rounded-full">Out of Stock</span>
              </div>
            {% else %}
              <div class="absolute top-2 left-2">
                <span class=" bg-gold text-white text-xs font-bold px-3 py-1 rounded-full">Available</span>
              </div>
            {% endif %}
          </div>
          
          <div class="p-4">
            <!-- Product Title -->
            <h3 class="title text-lg font-medium text-charcoal">{{ product.title }}</h3>
            <p class="category-value text-sm text-gray-500 mb-2">{{ product.category_name }}</p>
            
            <!-- Star Rating -->
            <div class="flex items-center mb-3">
              <div class="flex text-gold">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star-half-alt"></i>
              </div>
              <span class="text-xs text-gray-500 ml-1">(24 reviews)</span>
            </div>
            
            <!-- Price and Add to Cart -->
            <div class="flex justify-between items-center">
              <span class="price text-xl font-bold text-charcoal">${{ product.base_price }}</span>
              <div class="flex space-x-2">
                <a href="/product/{{ product.id }}"
                  class="bg-white border border-gold text-gold hover:bg-gold hover:text-white p-2 rounded-lg transition duration-300">
                  <i class="fas fa-eye"></i>
                </a>
                {% if product.isAvailable and product.stock > 0 %}
                  <button
                    class="bg-gold hover:bg-gold-dark text-white px-3 py-2 rounded-lg transition duration-300 flex items-center"
                    data-product-id="{{ product.id }}">
                    <i class="fas fa-shopping-cart mr-1"></i> Add
                  </button>
                {% else %}
                  <button
                    class=" bg-gray-300 text-gray-600 px-3 py-2 rounded-lg cursor-not-allowed flex items-center"
                    disabled>
                    <i class="fas fa-shopping-cart mr-1"></i> Unavailable
                  </button>
                {% endif %}
              </div>
            </div>
            
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
<script src="../../public/js/pageProducts.js"></script>
{% endblock %}