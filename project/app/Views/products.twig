{% extends "layouts/main.twig" %}
{% block title %}Products{% endblock %}
{% block content %}

<section class="py-16 bg-cream">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">

    
    <!-- Filters -->
    <div class="bg-white rounded-lg shadow-sm p-5 mb-6">
      <div class="flex flex-col md:flex-row justify-between space-y-4 md:space-y-0">
        <div class="flex flex-col md:flex-row md:space-x-4 space-y-4 md:space-y-0">
          <div>
            <label for="category-filter" class="block text-sm font-medium text-gray-700 mb-1">Category</label>
            <select id="category-filter" class="w-full md:w-48 border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-blue focus:border-blue">
              <option value="All Categories">All Categories</option>
              {% for category in products.categories %}
                <option value="{{ category.title }}">{{ category.title }}</option>
              {% endfor %}
            </select>
          </div>
          
        </div>
        <div>
          <label for="sort-by" class="block text-sm font-medium text-gray-700 mb-1">Sort By</label>
          <select id="sort-by" class="w-full md:w-48 border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-blue focus:border-blue">
            <option value="newest">Newest</option>
            <option value="name-asc">Name (A-Z)</option>
            <option value="name-desc">Name (Z-A)</option>
            <option value="price-asc">Price (Low to High)</option>
            <option value="price-desc">Price (High to Low)</option>
          </select>
        </div>
      </div>
    </div>
    <div id="search-results" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"></div>


    <div  id="product-container" class=" grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
     
    </div>
  </div>
   <div id="search-results" class="absolute z-50 w-full mt-1 bg-white border border-gray-300 rounded-lg shadow-lg hidden overflow-hidden max-h-96 overflow-y-auto">
    <!-- Les résultats de recherche seront injectés ici par JavaScript -->
  </div>

<div id="pagination" class="mt-8">
<nav class="flex justify-center mt-6">
  <ul class="inline-flex items-center -space-x-px text-sm">
    <li>
      <a href="#" class="pagination-prev px-3 py-2 ml-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-gray-700">
        Previous
      </a>
    </li>

    <li><a href="#" data-page="1" class="pagination-page px-3 py-2 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700">1</a></li>
    <li><a href="#" data-page="2" class="pagination-page px-3 py-2 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700">2</a></li>
    <li><a href="#" data-page="3" class="pagination-page px-3 py-2 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700">3</a></li>

    <li>
      <a href="#" class="pagination-next px-3 py-2 leading-tight text-gray-500 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-100 hover:text-gray-700">
        Next
      </a>
    </li>
  </ul>
</nav>

</div>

</section>

<script src="../../public/js/main.js"></script>
<script src="../../public/js/products.js"></script>
  {# // <script src="../../public/js/cart.js" ></script> #}

{% endblock %}